
<div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
      <strong>All your checkins are listed below:</strong>
    </div>
  </div>

    <div class="panel-body">
      <% @pins.each do |pin| %>
       <h3>Checkin <%= pin.created_at %></h3>
        
          <%= pin.user.email if pin.user %>
          <%= link_to 'View', pin,  class: "btn btn-lg btn-default" %>
          <% if pin.user == current_user %>
         <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-lg btn-default"  %>
        <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-default" %>
        <% end %>
        
      <% end %>

        <br>
    </div>
       <div class="panel-footer">
    <% if user_signed_in? %>
      <%= link_to 'New Checkin', new_pin_path, class: "btn btn-default" %>
    <% end %>
      </div>
    </div>
  </div>
